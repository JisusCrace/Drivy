<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/decoración_circulos">

        <ImageView
            android:id="@+id/flecha_regreso"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_arrow"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/circulo"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/circulo"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/circulo1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circulo"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/circulo2"
            android:layout_width="16dp"
            android:layout_height="15dp"
            android:src="@drawable/circulo"
            android:layout_marginStart="8dp"
            android:layout_marginTop="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:id="@+id/circulo3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-28dp"
            android:src="@drawable/circulo" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        android:id="@+id/mapa"
        android:layout_below="@+id/decoración_circulos"
        android:outlineAmbientShadowColor="@color/primaryColor"
        android:outlineSpotShadowColor="@color/primaryColor">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/btn_open_maps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mapa"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/btn_ver_parada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver parada en Google Maps"
                android:layout_gravity="center"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/white" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/detalle_parada"
        android:layout_below="@id/mapa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de la parada "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/text_calle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_referencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referencia: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_conductor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductor: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_marca_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca de auto: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_modelo_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo de auto: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:id="@+id/text_placa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa: "
                android:fontFamily="@font/adlam_display"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
