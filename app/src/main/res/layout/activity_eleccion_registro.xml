<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/circulo6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/circulo" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/img_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/adlam_display"
        android:text="Â¿Como deseas registrarte?"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/text_1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/text_1"
        android:paddingTop="5dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/boton_registroConductor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Conductor"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/conductor"
                    android:fontFamily="@font/adlam_display"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="Conductor"
                    android:src="@drawable/conductor"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/boton_registroPasajero"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Pasajero"
                    android:textSize="18sp"
                    android:fontFamily="@font/adlam_display"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:contentDescription="Pasajero"
                    android:src="@drawable/pasajero" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <ImageView
        android:id="@+id/myImage"
        android:layout_width="65dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="561dp"
        android:src="@drawable/circulo" />

    <ImageView
        android:id="@+id/circulo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="187dp"
        android:src="@drawable/circulo" />

    <ImageView
        android:id="@+id/circulo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/circulo"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/circulo3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="347dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/circulo" />

    <ImageView
        android:id="@+id/circulo4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="346dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/circulo" />

    <ImageView
        android:id="@+id/circulo5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="366dp"
        android:layout_marginTop="668dp"
        android:src="@drawable/circulo" />



    <ImageView
        android:id="@+id/circulo7"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/circulo"
        android:layout_marginStart="350dp"
        android:layout_marginTop="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <ImageView
        android:id="@+id/flecha_regreso"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_arrow"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />



</RelativeLayout>