<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="center_horizontal">

    <!-- Logo de MercadoPago -->
    <ImageView
        android:id="@+id/logoMercadoPago"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/mercadopago_logo"
        android:contentDescription="Logo de MercadoPago"
        android:layout_marginBottom="32dp" />

    <!-- Descripción del pago -->
    <TextView
        android:id="@+id/tvServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago a Drivy Carpooling"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$50.00 MXN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#009EE3"
        android:layout_marginBottom="32dp" />

    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/btnConfirmarPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar pago"
        android:textAllCaps="false"
        android:backgroundTint="#009EE3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Botón Cancelar -->
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:backgroundTint="#D0D0D0"
        android:textColor="#000000" />
</LinearLayout>
