<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Círculo decorativo superior derecho -->
    <ImageView
        android:id="@+id/circulo_superior"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/circulo"
        android:contentDescription="Decoración superior" />

    <!-- Círculo decorativo inferior izquierdo -->
    <ImageView
        android:id="@+id/circulo_inferior"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/circulo"
        android:contentDescription="Decoración inferior" />

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Botón regresar" />

    <!-- Título dinámico -->
    <TextView
        android:id="@+id/textTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pago exitoso con PayPal"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <!-- Icono de check -->
    <ImageView
        android:id="@+id/iconCheck"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        android:layout_below="@id/textTitulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="Icono de pago exitoso" />

    <!-- Botón personalizado -->
    <Button
        android:id="@+id/btnIrAReserva"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Ir a mi reserva"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_shape"
        android:layout_below="@id/iconCheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp" />
</RelativeLayout>
